@model ds_mvc_asp.Models.Usuario

@{
    ViewBag.Title = "Usuário Cadastrado";
}
<style>
    dt {
        color: #053F5C;
        font-size: 1.2em;
        margin-bottom: 0.35em;
    }
    dd {
        font-size: 1.2em;
        margin-bottom: 0.35em;
    }
    .title {
        margin-top: 1.2em;
        margin-bottom: .5em;
    }
    .conteudo {
        margin-bottom: 15em;
    }
    .voltar {
        margin-top: 16em;
        margin-bottom: -13em;
    }
    footer {
        color: #053F5C;
    }
</style>
<h2 class="title">Cadastro Realizado com Sucesso!</h2>

<div class="conteudo">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Username:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeUsuario)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Login:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>
            Senha:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Senha)
        </dd>
    </dl>

    <div class="voltar">
        @Html.ActionLink("Voltar", "Index")
    </div>
</div>
